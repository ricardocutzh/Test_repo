import io.jenkins.plugins.casc.ConfigurationAsCode;
import javaposse.jobdsl.dsl.DslFactory
import javaposse.jobdsl.dsl.Folder
import javaposse.jobdsl.dsl.jobs.WorkflowJob
pipeline {
    agent {
        node {
            label 'master'
        }
    }

    stages {
        stage('Update Jenkins Jobs') {
            steps {
                echo "pipeline test"
            }
        }
        stage('creating seed job') {
            steps {
                jobDsl targets: 'jobs/*.groovy', removedJobAction: 'DELETE', removedViewAction: 'DELETE', additionalClasspath: 'jobs/build/libs/*.jar'
                echo "test"
            }
        }
        stage('Reloading Casc configuration') {
            steps {
                sh "ls -la"
                sh "rm -rf /etc/casc/*"
                sh "ls -la /etc/casc"
                sh "cp ./casc/*.yaml /etc/casc/"
                script {
                    ConfigurationAsCode.get().configure()
                }
            }
        }
    }
}